[Unit]
Description=Sandhill docker application stack
After=docker.service

[Service]
Type=simple
WorkingDirectory=/home/deploy/sandhill
ExecStart=TAG=${TAG} /usr/local/bin/docker-compose -f /home/deploy/sandhill/docker-compose.yml -f /home/deploy/sandhill/docker-compose.test.yml up
ExecStop=TAG=${TAG} /usr/local/bin/docker-compose -f /home/deploy/sandhill/docker-compose.yml -f /home/deploy/sandhill/docker-compose.test.yml down
ExecReload=TAG=${TAG} /usr/local/bin/docker-compose -f /home/deploy/sandhill/docker-compose.yml -f /home/deploy/sandhill/docker-compose.test.yml up
Restart=on-error
RestartSec=180
StartLimitInterval=550
StartLimitBurst=3
[Install]
WantedBy=multi-user.target
