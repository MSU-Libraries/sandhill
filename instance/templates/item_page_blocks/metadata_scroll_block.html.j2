<div class="abstract_scroll py-2 px-4 border  rounded-top">
     {{ display_conf['value'] | render | safe }}
</div>
<div class="bg-light border mb-4 border-top-0 rounded-bottom text-right">
    <a class="abstract_more_button d-block p-1 pt-2 pr-2" data-toggle="modal" data-target="#abstract_modal" aria-label="View full abstract"><i data-feather="maximize-2"></i></a>
</div>

<!-- Modal -->
<div class="modal fade" id="abstract_modal" tabindex="-1" role="dialog" aria-labelledby="abstract_title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="abstract_title">Abstract</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body abstract_body">
                {{ display_conf['value'] | render | safe}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

