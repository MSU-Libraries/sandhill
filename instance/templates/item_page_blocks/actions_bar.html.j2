<div class="mt-4 mb-2">
    <ul class="nav nav-pills">
        <li class="mr-1">
            <button class="btn px-0 mr-2 sh-button-dropdown dropdown-toggle" data-flip="false" data-offset="-1,0,0,0" data-toggle="dropdown" aria-expanded="false"> 
                <img src="{{ url_for('static', filename='icons/Icon_Download.svg') }}" role="presentation" alt="" class="pr-1"/>
                Download
            </button>

            <ul class="dropdown-menu sh-dropdown bg-light mw-25">
                {% if item.rights_dpla_uri | first in rights and 'dark' in rights[item.rights_dpla_uri | first] %}
                     <li class="dropdown-item sh-no-highlight">
                            <a href="{{ item.rights_dpla_uri | first }}"><img src="{{ rights[item.rights_dpla_uri | first]['dark'] }}" alt="{{ item.rights_dpla | head }}" class="pr-1 sh-rights-badge"/></a>
                    </li>
                    <div class="dropdown-divider"></div>
                {% endif %}
                {% for download_type in download_conf %}
                    {% include 'item_page_blocks/downloads.html.j2' %}
                    {% if not loop.last %}
                        <div class="dropdown-divider"></div>
                    {% endif %}
                {% endfor %}
            </ul>
        </li>
        <li class="mr-1">
            <button class="btn px-0 mr-2 sh-button-dropdown dropdown-toggle" data-flip="false" data-toggle="dropdown" aria-expanded="false"> 
                <img src="{{ url_for('static', filename='icons/Icon_Share.svg') }}" role="presentation" alt="" class="pr-1"/>
                Share
            </button>
            <ul class="dropdown-menu sh-dropdown bg-light mw-25">
                 <li class="dropdown-header sh-color-gray-dark sh-font-size-md sh-no-highlight disable-close-on-click">
                    <form>
                      <div class="sh-no-highlight">
                        {% if not item.ark_url|length > 0 and not item.doi_url|length > 0 %}
                            <span>Coming soon!</span>
                        {% else %}
                            <label for="permalink">Permalink</label>
                            <input type="text" id="permalink" value="{{ item.ark_url if item.ark_url else item.doi_url }}" id="copy-input">
                            <span class="input-group-btn">
                              <button class="btn btn-default copy-on-click" data-copytarget='#permalink' type="button" id="copy-button">
                                <img src="{{ url_for('static', filename='icons/Icon_Clipboard.svg') }}" aria-label="Copy permalink" alt="Copy permalink" class="action_bar_icon pr-1"/>
                              </button>
                            </span>
                        {% endif %}
                      </div>
                    </form>
                 </li>
            </ul>
        </li>
        <li>
            <button class="btn px-0 mr-2 sh-button-dropdown dropdown-toggle" data-flip="false" data-toggle="dropdown" aria-expanded="false">
                <img src="{{ url_for('static', filename='icons/Icon_Contact.svg') }}" role="presentation" alt="" class="pr-1"/>
                Contact Us
            </button>
            <ul class="dropdown-menu sh-dropdown bg-light mw-25">
                 <li class="dropdown-header sh-color-gray-dark sh-font-size-md sh-no-highlight disable-close-on-click">
                    Email us at <a id='email_link' href="mailto:repoteam@lib.msu.edu?subject=Inquiry on https://d.lib.msu.edu/{{ view_args.namespace }}/{{ view_args.id}}">repoteam@lib.msu.edu</a>
                    <button class="btn btn-default px-0 py-0 sh-icon sh-icon-narrow copy-on-click" data-copytarget="#email_link" type="button" id="copy-button">
                        <img src="{{ url_for('static', filename='icons/Icon_Clipboard.svg') }}" aria-label="Copy email" alt="Copy email" class="pr-1"/>
                    </button>
                 </li>
                 <div class="dropdown-divider"></div>
                <li class="dropdown-item"><a href="https://lib.msu.edu/general/access-remediation/">Report accessibility issue</a></li>
            </ul>
        </li>
    </ul>
</div>
