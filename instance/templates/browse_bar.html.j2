{% macro gen_browse_icon(icon, text, number, link) -%}
    <div class="col-3 m-2 m-md-3 col-lg">
        <a class="px-2 px-md-4 py-3 sh-browse-link d-block" href='{{ link }}'>
            <div class="row justify-content-center" role="presentation">
                <i class="sh-icon-browse" data-feather="{{ icon }}"></i>
            </div>
            <div class="row justify-content-center">
                <span class="text-center sh-color-green-msu">{{ text }}<br />{{ "{:,}".format(number) }}</span>
            </div>
        </a>
    </div>
{%- endmacro -%}

