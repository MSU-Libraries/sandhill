{% macro gen_browse_icon(icon, text, number, link) -%}
    <div class="col-3 m-2 m-md-3 col-lg">
        <a class="px-2 px-md-4 py-3 sh-browse-link d-block" href='{{ link }}'>
            <div class="row justify-content-center" role="presentation">
                <i class="sh-icon-browse" data-feather="{{ icon }}"></i>
            </div>
            <div class="row justify-content-center">
                <span class="text-center sh-color-green-msu" href="/">{{ text }}<br />{{ "{:,}".format(number) }}</span>
            </div>
        </a>
    </div>
{%- endmacro -%}

{% set item_counts = counts['facet_counts']['facet_fields']['RELS_EXT_hasModel_uri_ms'] | makedict %}
<div class="row no-gutters justify-content-center mx-lg-5 mx-xl-0">
    <div class="col-0 col-lg-auto col-xl-1"></div>
    
    {{ gen_browse_icon("globe", "Browse All", counts['response']['numFound'], "/search") }}
    {{ gen_browse_icon("book", "Books", item_counts['info:fedora/islandora:bookCModel'], '/search?fq=RELS_EXT_hasModel_uri_ms:"info:fedora/islandora:bookCModel"') }}
    {{ gen_browse_icon("book-open", "Newspapers", item_counts['info:fedora/islandora:newspaperIssueCModel'], '/search?fq=RELS_EXT_hasModel_uri_ms:"info:fedora/islandora:newspaperIssueCModel"') }}
    {{ gen_browse_icon("volume-2", "Audio", item_counts['info:fedora/islandora:sp-audioCModel'], '/search?fq=RELS_EXT_hasModel_uri_ms:"info:fedora/islandora:sp-audioCModel"') }}
    {{ gen_browse_icon("image", "Images", item_counts['info:fedora/islandora:sp_large_image_cmodel'] + item_counts['info:fedora/islandora:sp_basic_image'], '/search?fq=RELS_EXT_hasModel_uri_ms:("info:fedora/islandora:sp_basic_image"+OR+"info:fedora/islandora:sp_large_image_cmodel")') }}
    {{ gen_browse_icon("file-text", "PDFs", item_counts['info:fedora/islandora:sp_pdf'], '/search?fq=RELS_EXT_hasModel_uri_ms:"info:fedora/islandora:sp_pdf"') }}

    <div class="col-0 col-lg-auto col-xl-1"></div>
</div>
