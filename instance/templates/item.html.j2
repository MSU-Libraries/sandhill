{% extends 'base.html.j2' %}

{% block title %}
    {{ metadata_conf.title | render }}
{% endblock %}

{% block content %}
    {# title of the page #}
    <div class="px-3 p-md-4 p-lg-5 p-xl-5">
        <div class="row">
            <div class="col-12">
                <h2>{{ metadata_conf['title'] | render }}</h2>
                {# include the actions section of the page  #}
                {% include 'item_page_blocks/actions_bar.html.j2' %}
            </div>
        </div>
     
        {% if view_args.md_position %}
            {# Display custom page render template if md_position passed in URL path #}
            {% include 'item.' + view_args.md_position + '.html.j2' %}
        {% else %}
            {% include 'item.right.html.j2' %}
        {% endif %}
    </div>
{% endblock %}
