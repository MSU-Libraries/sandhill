{
    "route": "/<string:namespace>",
    "template": "collection.html.j2",
    "data": [
        {
            "name": "item",
            "processor": "solr.select_record",
            "record_key":"response.docs",
            "on_fail": 404,
            "params": {
                "q": "PID:\"{{ view_args.namespace }}:root\"",
                "wt": "json",
                "fl":"fgs_label_s"
            }
        },
        {
            "name": "random_num",
            "processor": "general.random_number",
            "on_fail": 500
        },
        {
            "name": "rand_items",
            "processor": "solr.select",
            "on_fail": 404,
            "params": {
                "q":"PID:{{ view_args.namespace }}\\:* AND -PID:{{ view_args.namespace }}\\:root",
                "wt": "json",
                "sort": "random_{{ random_num }} desc",
                "fl": "PID, fgs_label_s, dc.description, fedora_datastreams_ms",
                "rows": "4"
            }
        }
    ]
}
