            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2",
            "link": "/search?fq=ndltd.level:{{ metadata_value | solr_escape | urlencode }}"
        },
        {
            "value": "{{ item.note_noType }}",
            "label": "Note",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
            "value": "{{ item.note_local }}",
            "label": "Local Note",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
            "value": "{{ item.note_venue }}",
            "label": "Venue Note",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
            "value": "{{ item.language }}",
            "label": "Language",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
