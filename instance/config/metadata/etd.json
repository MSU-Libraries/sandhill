            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
            "value": "{{ item.rightsholder_note }}",
            "label": "Conditions of Use",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
            "value": "{{ item.toc_entry }}",
            "label": "Table of Contents",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
            "value": "{{ item.isbn }}",
