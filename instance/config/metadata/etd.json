        },
        {
            "value": "{{ item.catalog_record }}",
            "label": "Catalog Record",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
            "value": "{% if item.embargo_end_date_ss and restriction %}{{ item.embargo_end_date_ss | first | format_date }} {% endif %}",
            "label": "Embargo End Date",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2"
        },
        {
            "value": "{{ item.doi_url }}",
            "label": "Permalink",
            "metadata_template": "item_page_blocks/metadata_descriptive_list.html.j2",
            "link": "{{ item.doi_url }}"
        }
    ]
}
