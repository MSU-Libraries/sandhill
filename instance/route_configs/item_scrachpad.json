{
    "route": "/<string:namespace>/<int:id>",
    "template": "item.html.j2",
    "data": [
        {
            "type": "solr",
            "name": "item",
            "base": "/select/",
            "params": {
                "q": "PID:\"<ARG.NAMESPACE>:<ARG.ID>\"",
                "wt": "json"
            }
        },
        {
            "type": "json_file",
            "name": "mdc",
            "matches": [
                {
                    "match_on": "file",
                    "match": "metadata_configs/<ARG.NAMESPACE>"
                },
                {
                    "ALSO": "match on this"
                }
            ]
        }
    ]
}
