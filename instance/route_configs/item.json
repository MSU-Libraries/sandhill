{
    "route": "/<string:namespace>/<int:id>",
    "template": "item.html.j2",
    "data": [
        {
            "type": "solr",
            "name": "item",
            "base": "/select/",
            "params": {
                "q": "PID:\"<ARG.NAMESPACE>:<ARG.ID>\"",
                "wt": "json"
            }
        },
        {
            "type": "json_file",
            "name": "metadata_conf",
            "params": {
                    "path_1": "metadata_configs/<ARG.NAMESPACE>.json",
                    "path_2": "metadata_configs/<item.fedora_datastream_version_OBJ_MIMETYPE_ms.0>.json" 
            }
        }
    ]
}
